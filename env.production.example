# Production Environment Variables
# Copy this to .env.production in your deployment

# Smart Contract Addresses
MAINNET_CONTRACT_ADDRESS=0x... # Your deployed mainnet contract
SEPOLIA_CONTRACT_ADDRESS=0x... # Your deployed sepolia contract

# RPC URLs
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Private Keys (for deployment only - keep secure!)
PRIVATE_KEY=your_private_key_here

# Etherscan API Key
ETHERSCAN_API_KEY=your_etherscan_api_key

# Frontend Environment
VITE_MAINNET_CONTRACT_ADDRESS=0x...
VITE_SEPOLIA_CONTRACT_ADDRESS=0x...
VITE_NETWORK=mainnet
VITE_INFURA_KEY=your_infura_key

# Database (if using external DB)
DATABASE_URL=postgresql://user:password@host:port/database

# Security
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here
